<view class = "container">
<!--navbar-->
<view class='navbar'>
  <view class="{{activeIndex == 0 ? 'btn_selected' : 'btn'}}" bindtap='topBtn0'>订单管理</view>
  <view class="{{activeIndex == 1 ? 'btn_selected' : 'btn'}}" bindtap='topBtn1'>房源管理</view>
  <view class="{{activeIndex == 2 ? 'btn_selected' : 'btn'}}" bindtap='topBtn2'>管家管理</view>
</view>

<view class='divLine' />

<!--订单管理-->
<view class="orders" wx:if="{{activeIndex == 0}}">
  <view class='searchBorder'>
    <image class='searchIcon' src='/icons/search.png'/>
    <input class='searchInput' placeholder='请输入关键字' bindinput='searchInput' />
    <button class='searchBtn' bindtap='orderSearch' maxlength='15'>搜索</button>
  </view>
  <orderBanner wx:for='{{orders}}' order='{{orders[index]}}' wx:key='{{index}}' />
</view>

<!--房源管理-->
<view class="hotels" wx:if="{{activeIndex == 1}}">
  <view class='searchBorder'>
    <image class='searchIcon' src='/icons/search.png'/>
    <input class='searchInput' placeholder='请输入关键字' bindinput='searchInput' />
    <button class='searchBtn' bindtap='hotelSearch' maxlength='15'>搜索</button>
  </view>
  <text>orde1r</text>
</view>

<!--管家管理-->
<view class="managers" wx:if="{{activeIndex == 2}}">
  <view class='searchBorder'>
    <image class='searchIcon' src='/icons/search.png'/>
    <input class='searchInput' placeholder='请输入关键词' bindinput='searchInput' />
    <button class='searchBtn' bindtap='managerSearch' maxlength='15'>搜索</button>
  </view>
<text>order2</text>
</view>

</view>